# remapping microstaking apache config

# webapp

Alias /remap /home/ubuntu/remapatron/webapp

<Directory /home/ubuntu/remapatron/webapp>
    Order deny,allow
    Allow from all
</Directory>

# config for the python script

WSGIScriptAlias /remappingservice /home/ubuntu/remapatron/service/get.py/
Alias /remappingservice/static /home/ubuntu/remapatron/service/static/

WSGIScriptAlias /tremappingservice /home/ubuntu/remapatron/service/tget.py/
Alias /tremappingservice/static /home/ubuntu/remapatron/service/static/

AddType text/html .py

<Directory /home/ubuntu/remapatron/service/>
        Order Allow,Deny
        Allow from all
</Directory>
