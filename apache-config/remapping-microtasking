# remapping microstaking apache config

# webapp

Alias /maproulette /osm/software/remapatron/webapp

<Directory /osm/software/remapatron/webapp>
    Order deny,allow
    Allow from all
</Directory>

# config for the python script

WSGIScriptAlias /mrsvc /osm/software/remapatron/service/get.py/
Alias /mrsvc/static /osm/software/remapatron/service/static/

AddType text/html .py

<Directory /osm/software/remapatron/service/>
        Order Allow,Deny
        Allow from all
</Directory>
